<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent">
<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="名称"></TextView>
<EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/edt_ac_name" android:hint="新建人员/机构"></EditText>

<TextView android:id="@+id/TextView04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="类别"></TextView><Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center" android:id="@+id/btn_ac_type" android:text="家庭成员"></Button>
<TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="备注"></TextView><EditText android:layout_height="wrap_content" android:lines="2" android:layout_width="fill_parent" android:id="@+id/edt_ac_remark"></EditText>



</LinearLayout>
