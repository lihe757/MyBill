<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent">
<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="名称"></TextView>
<EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/edt_ac_name"></EditText>

<TextView android:id="@+id/TextView04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="账户类型"></TextView><Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="现金" android:gravity="center" android:id="@+id/btn_ac_type"></Button><TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="初始资金"></TextView>
<EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/edt_ac_blance" android:inputType="number|numberSigned|numberDecimal"></EditText><TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="备注"></TextView><EditText android:layout_height="wrap_content" android:lines="2" android:layout_width="fill_parent" android:id="@+id/edt_ac_remark"></EditText>



</LinearLayout>
